@model BusinessObject.BookAuthor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>



<h4>Book</h4>
<hr />
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>

    <script>
        setTimeout(function () {
            var previousUrl = document.referrer;

            if (previousUrl) {
                window.location.href = previousUrl;
            } else {
                window.location.href = '@Url.Action("Index")';
            }
        }, 3000);
    </script>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAuthor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="author_order" class="control-label"></label>
                <input asp-for="author_order" class="form-control" />
                <span asp-validation-for="author_order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="royalty_percentage" class="control-label"></label>
                <input asp-for="royalty_percentage" class="form-control" />
                <span asp-validation-for="royalty_percentage" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="author_id" class="control-label"></label>
                <select asp-for="author_id" class="form-control" asp-items="ViewBag.author_id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
